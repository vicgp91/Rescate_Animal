<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appcpanama.logicstudio.net.appcpanama">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoperezoso"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/GOOGLE_MAP_DEVELOPER_KEY_ANDROID_JACOB" />

        <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" />

        <activity
            android:name=".Activity_Valida_Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name" />
        <activity android:name=".LoginScreen" />
        <activity android:name=".RegisterScreen" />
        <activity android:name=".HomeScreen" />
        <activity android:name=".InfoAnimal" />
        <activity android:name=".PerfilScreen" />
        <activity android:name=".AnimalDetails" />
        <activity android:name=".MapActivity" />
        <activity
            android:name=".ReportarActivity"
            android:label="@string/ayudalosACasa"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeReporte" />
        <activity android:name=".FinalReport" />
        <activity
            android:name=".ParticipaActivity"
            android:label="@string/title_activity_participa" />
        <activity
            android:name=".ResultScreen"
            android:label="@string/title_activity_participa" />
        <activity
            android:name=".ContactScreen"
            android:label="@string/title_activity_contact_screen"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>